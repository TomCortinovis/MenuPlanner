<UserControl x:Class="MenuPlanner.UI.Views.Popups.PrintingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MenuPlanner.UI.Views.Popups"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <FlowDocumentScrollViewer Grid.Row="0">
            <FlowDocument x:Name="Document">
                <Paragraph>
                    <ItemsControl  ItemsSource="{Binding Titles}">
                    </ItemsControl>
                </Paragraph>
            </FlowDocument>
        </FlowDocumentScrollViewer>
        <DocumentViewer Grid.Row="1" x:Name="Viewer" />
    </Grid>
</UserControl>
